{
  "info": {
    "name": "Chat Backend API",
    "description": "API collection for the offline peer-to-peer chat backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"username\": \"TestUser\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Scan for Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/scan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "scan"]
            }
          },
          "response": []
        },
        {
          "name": "Connect to Device",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/connect/Device1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "connect", "Device1"]
            }
          },
          "response": []
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Hello there!\",\n  \"messageType\": \"text\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/chat/sendMessage/Device1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "sendMessage", "Device1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Usage Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/usage",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "usage"]
            }
          },
          "response": []
        },
        {
          "name": "Get Conversations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "conversations"]
            }
          },
          "response": []
        },
        {
          "name": "Get Messages with Device",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/chat/messages/Device1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "messages", "Device1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
